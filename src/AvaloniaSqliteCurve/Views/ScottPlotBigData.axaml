<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Title="ScrottPlot BigData"
        x:Class="AvaloniaSqliteCurve.Views.ScottPlotBigData">
	<Grid RowDefinitions="30 *">
		<StackPanel Orientation="Horizontal">
            <ComboBox SelectionChanged="SelectingItemsControl_OnSelectionChanged">
                <ComboBoxItem Tag="5">5分钟</ComboBoxItem>
                <ComboBoxItem Tag="10">10分钟</ComboBoxItem>
                <ComboBoxItem Tag="30">30分钟</ComboBoxItem>
                <ComboBoxItem Tag="60">1小时</ComboBoxItem>
                <ComboBoxItem Tag="120">2小时</ComboBoxItem>
                <ComboBoxItem Tag="240">4小时</ComboBoxItem>
                <ComboBoxItem Tag="480">8小时</ComboBoxItem>
                <ComboBoxItem Tag="1440">1天</ComboBoxItem>
                <ComboBoxItem Tag="2880">2天</ComboBoxItem>
            </ComboBox>
        </StackPanel>
		<ScottPlot:AvaPlot Name="plot" Grid.Row="1" />
	</Grid>
</Window>
